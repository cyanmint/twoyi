<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name_label"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_name_hint"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Mode Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_mode_label"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbLegacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_mode_legacy" />

            <RadioButton
                android:id="@+id/rbServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_mode_server" />

        </RadioGroup>

        <!-- Server Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_server_settings"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_control_port"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etControlPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="8765"
                    android:inputType="number"
                    android:maxLength="5" />

            </LinearLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_adb_port"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etAdbPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5556"
                    android:inputType="number"
                    android:maxLength="5" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rootfs Path -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_rootfs_path"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvRootfsPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/tvRootfsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSelectRootfs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_select_rootfs" />

            <Button
                android:id="@+id/btnClearRootfs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_clear_rootfs" />

        </LinearLayout>

        <!-- Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_options"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:id="@+id/cbVerboseDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_verbose_debug" />

        <CheckBox
            android:id="@+id/cb3rdPartyRom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_3rd_party_rom" />

    </LinearLayout>

</ScrollView>
